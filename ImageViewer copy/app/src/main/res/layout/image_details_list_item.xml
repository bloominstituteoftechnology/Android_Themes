<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    app:cardBackgroundColor="@color/sabres_blue"
    app:cardCornerRadius="@dimen/details_list_item_card_view_corner_radius"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_name_view"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/details_list_item_image_view_height"
            />

        <TextView
            android:id="@+id/image_name_view"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_list_item_text_view_height"
            android:textSize="@dimen/details_list_item_text_view_text_size"
            android:textColor="@color/sabres_gold"
            android:textAlignment="center" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>